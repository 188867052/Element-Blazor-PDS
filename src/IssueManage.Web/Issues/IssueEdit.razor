@inherits   IssueEditBase
@using IssueManage.Pages.Issues
<BForm Value="Model" @ref="form" EnableAlwaysRender="true">
    <BFormItem TValue="int" IsHidden="true" Name="@nameof(IssueGridModel.Id)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="问题描述" Name="@nameof(IssueGridModel.Description)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="涉及产品" Name="@nameof(IssueGridModel.Description)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="DateTime" Label="实施时间" Name="@nameof(IssueGridModel.ImplementTime)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormActionItem Style="text-align:center">
        <BButton Type="ButtonType.Primary" OnClick="SubmitAsync">确定</BButton>
    </BFormActionItem>
</BForm>