@inherits BScoreEditBase
<BForm Value="Model" @ref="form" EnableAlwaysRender="true">
    <BFormItem TValue="int" IsHidden="true" Name="@nameof(ScoreModel.Id)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="学生名称" Name="@nameof(ScoreModel.Name)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="int" Label="学分" Name="@nameof(ScoreModel.ScoreNumber)" IsRequired="true">
        <BInput TValue="int"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="描述" Name="@nameof(ScoreModel.Remark)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormActionItem Style="text-align:center">
        <BButton Type="ButtonType.Primary" OnClick="SubmitAsync">确定</BButton>
    </BFormActionItem>
</BForm>