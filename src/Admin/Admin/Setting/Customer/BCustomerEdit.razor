@inherits BCustomerEditBase
<BForm Value="Model" @ref="form" EnableAlwaysRender="true">
    <BFormItem TValue="int" IsHidden="true" Name="@nameof(DrugModel.Id)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="药品名称" Name="@nameof(DrugModel.Name)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem> 
    <BFormItem TValue="string" Label="药品类型" Name="@nameof(DrugModel.DrugType)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="int" Label="数量" Name="@nameof(DrugModel.Amount)">
        <BInput TValue="int"></BInput>
    </BFormItem>
    <BFormItem TValue="decimal" Label="价格（￥）" Name="@nameof(DrugModel.Price)">
        <BInput TValue="decimal"></BInput>
    </BFormItem>
    <BFormActionItem Style="text-align:center">
        <BButton Type="ButtonType.Primary" OnClick="SubmitAsync">确定</BButton>
    </BFormActionItem>
</BForm>