@inherits BMeetingEditBase
<BForm Value="Model" @ref="form" EnableAlwaysRender="true">
    <BFormItem TValue="int" IsHidden="true" Name="@nameof(DepartmentModel.Id)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="科室名称" Name="@nameof(DepartmentModel.Name)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="科室主任" Name="@nameof(DepartmentModel.Header)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="描述" Name="@nameof(DepartmentModel.Remark)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormActionItem Style="text-align:center">
        <BButton Type="ButtonType.Primary" OnClick="SubmitAsync">确定</BButton>
    </BFormActionItem>
</BForm>