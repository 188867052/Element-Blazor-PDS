@inherits BStudentEditBase
<BForm Value="Model" @ref="form" EnableAlwaysRender="true">
    <BFormItem TValue="int" IsHidden="true" Name="@nameof(StudentModel.Id)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="学生姓名" Name="@nameof(StudentModel.Name)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="Sex" Label="性别" Name="@nameof(StudentModel.Sex)" IsRequired="true">
        <BSelect TValue="Sex"></BSelect>
    </BFormItem>
    <BFormItem TValue="string" Label="学号" Name="@nameof(StudentModel.Number)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormActionItem Style="text-align:center">
        <BButton Type="ButtonType.Primary" OnClick="SubmitAsync">确定</BButton>
    </BFormActionItem>
</BForm>