@page "/issue"
@inherits IssueListBase
@attribute [Resource("issueList", "问题列表")]
@using Element
<BAuthorizeView Roles="@Roles">
    <BForm Inline="true" @ref="form">
        <BFormItem TValue="string" Label="描述" Name="@nameof(IssueModel.Description)">
            <BInput TValue="string"></BInput>
        </BFormItem>
        <BFormItem TValue="DateTime" Label="发起时间" Name="@nameof(IssueModel.CreateTime)">
            <BDatePicker></BDatePicker>
        </BFormItem>
        <BFormActionItem Style="text-align:center">
            <BButton Type="ButtonType.Primary" OnClick="SearchAsync">搜索</BButton>
        </BFormActionItem>
    </BForm>
    <BButtonGroup>
        <BButton Type="@ButtonType.Primary" Size="@ButtonSize.Small" OnClick="CreateAsync">创建问题</BButton>
    </BButtonGroup>
    <BTable DataSource="Models" @ref="table" IgnoreProperties="new string[] { nameof(IssueModel.Id)}" HasSelectionColumn="false">
        <BTableColumns>
            <BTableTemplateColumn Text="操作" Context="model">
                <BButton Type="@ButtonType.Primary" Size="@ButtonSize.Mini" OnClick="@(e => EditAsync(model))">编辑</BButton>
                <BButton Type="@ButtonType.Danger" Size="@ButtonSize.Mini" OnClick="@(e => Delete(model))">删除</BButton>
            </BTableTemplateColumn>
        </BTableColumns>
    </BTable>
</BAuthorizeView>